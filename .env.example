# Get your Vapi API key from https://dashboard.vapi.ai
NEXT_PUBLIC_VAPI_PUBLIC_KEY=your_vapi_public_key_here

# Optional: If using a pre-configured assistant in Vapi dashboard
# NEXT_PUBLIC_VAPI_ASSISTANT_ID=your_assistant_id_here

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI (for quote extraction)
OPENAI_API_KEY=your_openai_api_key

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth (for admin panel)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Deepgram (text-to-speech for clip generation)
DEEPGRAM_API_KEY=xxx
